<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_content"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/mtb_bg_common_dialog"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="26dp"
        android:gravity="center_horizontal"
        android:text="标题"
        android:visibility="gone"
        android:textColor="@color/mtb_color_1D212C"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:text="信息描述"
        android:textColor="#1D212C"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mtb_color_331d212c"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mtb_cancel"
            android:textColor="@color/mtb_color_6C6F75"
            android:textSize="17sp"
            android:visibility="gone"/>

        <View
            android:id="@+id/view_button_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/mtb_color_331d212c"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mtb_ok"
            android:textColor="@color/mtb_color_FD2974"
            android:textSize="17sp"/>

    </LinearLayout>

</LinearLayout>